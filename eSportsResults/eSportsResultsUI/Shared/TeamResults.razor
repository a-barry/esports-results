<div class="category @PenTitle()">
    <ResultTitle Pen=Pen>Team</ResultTitle>

    <table class="table">
        <thead>
            <tr>
                <th>Team Name</th>
                <th>Points</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in ResultsList)
            {
                <tr>
                    <td><TeamIcon Id=@team.Id Name=@team.Name></TeamIcon></td>
                    <td>@team.Points</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {
    [Parameter] 
    public int Pen { get; set; }
    [Parameter] 
    public IEnumerable<Common.Models.TeamResult> ResultsList { get; set; }
    
    string PenTitle()
    {
        switch(Pen) {
            case 0:
                return "overall";
            case 1: 
                return "a";
            case 2: 
                return "b";
            case 3: 
                return "c";
            case 4: 
                return "d";
            default : 
                return "";
            }
    }
}

