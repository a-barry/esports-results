<div class="category @PenTitle()">
    <ResultTitle Pen=Pen>Individual</ResultTitle>
    <table class="table">
        <thead>
            <tr>
                <th>Rider</th>
                <th>Points</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in ResultsList)
            {
                <tr>
                    <td><IndividualName Name=@result.Name></IndividualName> <TeamIcon Id=@result.TeamId Name=@result.TeamName></TeamIcon></td>
                    <td>@result.Points</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@code {
    [Parameter] 
    public int Pen { get; set; }
    [Parameter] 
    public IEnumerable<Common.Models.IndividualResult> ResultsList { get; set; }

    string PenTitle()
    {
        switch(Pen) {
            case 0:
                return "overall";
            case 1: 
                return "a";
            case 2: 
                return "b";
            case 3: 
                return "c";
            case 4: 
                return "d";
            default : 
                return "";
            }
    }
}