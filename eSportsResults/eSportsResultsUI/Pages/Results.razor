@page "/results/{EventId}"

<PageTitle>Event results</PageTitle>

@if (eventResults == null)
{
    <p><em>Loading results...</em></p>
}
else
{
    <TeamStyles ResultsList=eventResults.TeamResults[0]></TeamStyles>

    <h1>@eventResults.SeriesTitle Race @eventResults.EventTitle results</h1>

    for(int i = 1; i<=4; i++)
    {
        <IndividualResults Pen=i ResultsList=eventResults.IndividualResults[i]></IndividualResults>
    }

    for(int i = 0; i<=4; i++)
    {
        <TeamResults Pen=i ResultsList=eventResults.TeamResults[i]></TeamResults>
    }

}
